@page
@model lost_found_web.Pages.Search.IndexModel
@{
    ViewData["Title"] = "Search Items";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-center align-items-center mb-4">
                <h2><i class="fas fa-search"></i> Search Lost & Found Items</h2>
            </div>

            <!-- Search Form -->
            <div class="row justify-content-center mb-4">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-body">
                            <form method="get" class="row g-3">
                                <div class="col-md-8">
                                    <label for="searchTerm" class="form-label">Search for items</label>
                                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                           value="@Model.SearchTerm" placeholder="Enter item name, description, or location...">
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Results -->
            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <div class="row">
                    <!-- Lost Items Results -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-search"></i> Lost Items (@Model.LostItems.Count())</h5>
                            </div>
                            <div class="card-body">
                                @if (Model.LostItems.Any())
                                {
                                    @foreach (var item in Model.LostItems)
                                    {
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <h6 class="card-title text-primary">@item.ItemName</h6>
                                                        <p class="card-text">
                                                            <strong>Description:</strong> @item.Description<br>
                                                            <strong>Lost Location:</strong> @item.LostLocation<br>
                                                            <strong>Lost Date:</strong> @item.LostDate.ToString("MMM dd, yyyy")<br>
                                                            <strong>Contact:</strong> @item.ContactInfo
                                                        </p>
                                                        <small class="text-muted">
                                                            Reported: @item.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                                        </small>
                                                    </div>
                                                    <div class="btn-group-vertical ms-2" role="group">
                                                        <a asp-page="/LostItems/Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-page="/LostItems/Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">No lost items found matching your search.</p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Found Items Results -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="fas fa-hand-holding"></i> Found Items (@Model.FoundItems.Count())</h5>
                            </div>
                            <div class="card-body">
                                @if (Model.FoundItems.Any())
                                {
                                    @foreach (var item in Model.FoundItems)
                                    {
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <h6 class="card-title text-success">@item.ItemName</h6>
                                                        <p class="card-text">
                                                            <strong>Description:</strong> @item.Description<br>
                                                            <strong>Found Location:</strong> @item.FoundLocation<br>
                                                            <strong>Found Date:</strong> @item.FoundDate.ToString("MMM dd, yyyy")<br>
                                                            <strong>Contact:</strong> @item.ContactInfo
                                                        </p>
                                                        <small class="text-muted">
                                                            Reported: @item.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                                        </small>
                                                    </div>
                                                    <div class="btn-group-vertical ms-2" role="group">
                                                        <a asp-page="/FoundItems/Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-page="/FoundItems/Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">No found items found matching your search.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Search for Lost & Found Items</h4>
                    <p class="text-muted">Enter a search term to find items that have been lost or found.</p>
                </div>
            }
        </div>
    </div>
</div>
