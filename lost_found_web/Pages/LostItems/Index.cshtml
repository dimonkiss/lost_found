@page
@model lost_found_web.Pages.LostItems.IndexModel
@{
    ViewData["Title"] = "Lost Items";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-search"></i> Lost Items</h2>
                <a asp-page="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Report Lost Item
                </a>
            </div>

            @if (Model.LostItems.Any())
            {
                <div class="row">
                    @foreach (var item in Model.LostItems)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title text-primary">@item.ItemName</h5>
                                    <p class="card-text">
                                        <strong>Description:</strong> @item.Description<br>
                                        <strong>Lost Location:</strong> @item.LostLocation<br>
                                        <strong>Lost Date:</strong> @item.LostDate.ToString("MMM dd, yyyy")<br>
                                        <strong>Contact:</strong> @item.ContactInfo
                                    </p>
                                </div>
                                <div class="card-footer bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            Reported: @item.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                        </small>
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No lost items found</h4>
                    <p class="text-muted">Be the first to report a lost item!</p>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Report Lost Item
                    </a>
                </div>
            }
        </div>
    </div>
</div>
