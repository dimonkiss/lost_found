@page "{id:int}"
@model lost_found_web.Pages.LostItems.DeleteModel
@{
    ViewData["Title"] = "Delete Lost Item";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash"></i> Delete Lost Item</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this lost item? This action cannot be undone.
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@Model.LostItem.ItemName</h5>
                            <p class="card-text">
                                <strong>Description:</strong> @Model.LostItem.Description<br>
                                <strong>Lost Location:</strong> @Model.LostItem.LostLocation<br>
                                <strong>Lost Date:</strong> @Model.LostItem.LostDate.ToString("MMM dd, yyyy")<br>
                                <strong>Contact:</strong> @Model.LostItem.ContactInfo
                            </p>
                            <small class="text-muted">
                                Reported: @Model.LostItem.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                            </small>
                        </div>
                    </div>

                    <form method="post">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Lost Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
